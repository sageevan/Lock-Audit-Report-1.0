<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<!-- Must be valid -->
		<UseWPF>true</UseWPF>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<RootNamespace>LockAuditReport</RootNamespace>
		<AssemblyName>LockAuditReport</AssemblyName>
		<Version>1.0.0</Version>
		<FileVersion>1.0.0.0</FileVersion>
		<Company>Lock Audit Report 1.0</Company>
		<Product>Lock Audit Report 1.0</Product>
		<Authors>Your Name</Authors>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="appsettings.json" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="appsettings.json">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<PackageReference Include="QuestPDF" Version="2024.7.0" />
	</ItemGroup>

</Project>
